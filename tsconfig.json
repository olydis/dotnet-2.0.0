{
  "compilerOptions": {
    "outDir": "dist",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es6",
    "types": [
      "node"
    ],
    "lib": [
      "es6"
    ],
    "experimentalDecorators": true,
    "newLine": "LF"
  },
  "exclude": [
    "dist",
    "node_modules/**/*"
  ]
}